<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:layout_marginTop="-200dp"
    tools:context="com.mobop.michael_david.stufftracker.EditItemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="Take a picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            app:srcCompat="@color/colorAccent"
            android:layout_marginTop="12dp"
            android:id="@+id/ivStuffPicture"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:layout_height="150dp"
            android:layout_width="250dp" />

        <TextView
            android:text="Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivStuffPicture"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:id="@+id/tvName" />

        <TextView
            android:text="Brand :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_alignStart="@+id/tvName"
            android:layout_marginTop="22dp"
            android:id="@+id/tvBrand" />

        <TextView
            android:text="Model :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBrand"
            android:layout_alignStart="@+id/tvBrand"
            android:layout_marginTop="22dp"
            android:id="@+id/tvModel" />

        <TextView
            android:text="Note :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvModel"
            android:layout_alignStart="@+id/tvModel"
            android:layout_marginTop="15dp"
            android:id="@+id/tvNote" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_below="@+id/tvNote"
            android:id="@+id/edtNote"
            android:layout_alignEnd="@+id/ivStuffPicture"
            android:text="Note" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_below="@+id/edtName"
            android:layout_alignEnd="@+id/edtName"
            android:id="@+id/edtBrand" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Model"
            android:ems="10"
            android:layout_below="@+id/edtBrand"
            android:layout_alignStart="@+id/edtBrand"
            android:id="@+id/edtModel" />

        <TextView
            android:text="Item categories :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/tvCategories"
            android:layout_below="@+id/edtNote"
            android:layout_alignStart="@+id/tvNote" />

        <Button
            android:text="Select item categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/btnCategories"
            android:layout_below="@+id/tvCategories"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="@string/rfid_tag_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvRfidId"
            android:layout_above="@+id/edtName" />

        <Button
            android:text="Add / Edit item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddEdit"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/btnCategories"
            android:layout_alignStart="@+id/button2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/edtName"
            android:layout_alignBaseline="@+id/tvName"
            android:layout_alignBottom="@+id/tvName"
            android:layout_alignEnd="@+id/ivStuffPicture" />
    </RelativeLayout>
</ScrollView>
